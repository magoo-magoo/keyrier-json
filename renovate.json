{
    "extends": ["config:base"],
    "packageRules": [
        {
            "packagePatterns": ["^electron"],
            "groupName": "electron packages"
        },
        {
            "excludePackagePatterns": ["^@types/"],
            "depTypeList": ["devDependencies"],
            "updateTypes": ["patch", "minor"],
            "groupName": "devDependencies (non-major)"
        },
        {
            "excludePackagePatterns": ["^@types/"],
            "depTypeList": ["devDependencies"],
            "updateTypes": ["major"],
            "groupName": "devDependencies"
        }
    ]
}
