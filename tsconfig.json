{
    "compilerOptions": {
        "outDir": "build/dist",
        "baseUrl": "src",
        "module": "esnext",
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "jsx": "preserve",
        "noEmit": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "esModuleInterop": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "allowJs": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noErrorTruncation": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "strictBindCallApply": true,
        "alwaysStrict": true,
        "suppressImplicitAnyIndexErrors": false,
        "allowUnusedLabels": false,
        "allowUnreachableCode": false,
        "noStrictGenericChecks": false,
        "types": ["react-dom/experimental", "react/experimental", "jest"]
    },
    "exclude": ["node_modules", "build", "scripts", "acceptance-tests", "webpack", "jest", "ui/setupTests.ts"],
    "include": ["src", "core/code.test.ts", "core/sql.ts", "core/code.ts", "core/sql.test.ts", "ui/config.ts", "ui/index.tsx", "ui/react-app-env.d.ts", "ui/registerServiceWorker.ts", "ui/setupTests.ts", "ui/typings.d.ts"]
}
